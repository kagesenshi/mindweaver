# :vim: set ft=dockerfile:

# Frontend Dockerfile for Mindweaver Reflex application
FROM python:3.13-slim AS builder

# Install uv for fast dependency management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Set working directory
WORKDIR /app

# Copy dependency files
COPY pyproject.toml ./
COPY mindweaver_fe ./mindweaver_fe
COPY rxconfig.py ./rxconfig.py
COPY assets ./assets
COPY main.py ./main.py

# Install dependencies
RUN uv sync && uv sync --frozen --no-dev

# Install Node.js for Reflex frontend compilation
RUN apt-get update && \
    apt-get install -y curl && \
    curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs unzip && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Set environment variables
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONUNBUFFERED=1

# Expose port
EXPOSE 3000

# Initialize and run Reflex

CMD ["reflex", "run", "--env", "prod"]
