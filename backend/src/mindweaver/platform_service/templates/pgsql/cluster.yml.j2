{% if s3_access_key and s3_secret_key %}
apiVersion: v1
kind: Secret
metadata:
  name: {{ name }}-s3-secret
type: Opaque
stringData:
  ACCESS_KEY_ID: {{ s3_access_key }}
  SECRET_ACCESS_KEY: {{ s3_secret_key }}
---
{% endif %}
apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: {{ name }}
spec:
  instances: {{ instances }}
  storage:
    size: {{ storage_size }}

{% if backup_destination %}
  backup:
    barmanObjectStore:
      destinationPath: {{ backup_destination }}
      {% if s3_endpoint_url %}
      endpointURL: {{ s3_endpoint_url }}
      {% endif %}
      {% if s3_access_key and s3_secret_key %}
      s3Credentials:
        accessKeyId:
          name: {{ name }}-s3-secret
          key: ACCESS_KEY_ID
        secretAccessKey:
          name: {{ name }}-s3-secret
          key: SECRET_ACCESS_KEY
      {% endif %}
      retentionPolicy: {{ backup_retention_policy }}
{% endif %}

{% if enable_citus or enable_postgis %}
  managed:
    extensions:
    {% if enable_citus %}
      - name: citus
    {% endif %}
    {% if enable_postgis %}
      - name: postgis
    {% endif %}
{% endif %}
---
apiVersion: v1
kind: Service
metadata:
  name: {{ name }}-rw-nodeport
spec:
  type: NodePort
  ports:
  - port: 5432
    targetPort: 5432
    protocol: TCP
    name: postgres
  selector:
    cnpg.io/cluster: {{ name }}
    cnpg.io/role: primary
---
apiVersion: v1
kind: Service
metadata:
  name: {{ name }}-ro-nodeport
spec:
  type: NodePort
  ports:
  - port: 5432
    targetPort: 5432
    protocol: TCP
    name: postgres
  selector:
    cnpg.io/cluster: {{ name }}
    cnpg.io/role: replica
---
apiVersion: v1
kind: Service
metadata:
  name: {{ name }}-r-nodeport
spec:
  type: NodePort
  ports:
  - port: 5432
    targetPort: 5432
    protocol: TCP
    name: postgres
  selector:
    cnpg.io/cluster: {{ name }}
